<div class="row">
  <form class="form-inline">
    <div class="form-group">
      {{input type="text" class="form-control col-md-3" placeholder="First Name" }}
      {{input type="text" class="form-control col-md-3" placeholder="Last Name" }}
    </div>
    <div class="form-group">
      {{input type="text" class="form-control col-md-3" placeholder="Height" }}
      {{input type="text" class="form-control col-md-3" placeholder="Weight (lbs)" }}
      {{input type="text" class="form-control col-md-3" placeholder="Age" }}
    </div>
    <div class="form-group">
      {{input type="textarea" cols="3" class="form-control col-md-3" placeholder="Prior Roles" }}
      <!-- Add Years experience -->
      {{input type="textarea" cols="3" class="form-control col-md-3" placeholder="Years Exp" }}
    </div>
    <div class="row">
      <div class="col-sm-10">
        <button {{action 'saveFamilyMemberInfo' }} class="btn btn-primary">
          {{#if isAdd}}
            Add
          {{else}}
            Save
          {{/if}}
        </button>
        <button {{action 'cancelFamilyMemberInfo' }} class="btn btn-default">Cancel</button>
      </div>
    </div>
  </form>
</div>
